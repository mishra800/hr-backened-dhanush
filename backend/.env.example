# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/hr_management_system

# JWT Secret Key (generate a secure random string)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Optional: AI API Keys (if using AI features)
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Application Settings
DEBUG=True
ENVIRONMENT=development
APP_BASE_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@company.com

# Twilio Configuration (for SMS/WhatsApp - Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
WHATSAPP_PHONE_NUMBER=+1234567890

# LinkedIn OAuth (Optional - for one-click apply)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/api/linkedin/callback
